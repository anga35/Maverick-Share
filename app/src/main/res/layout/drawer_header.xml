<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
app:layout_constraintBottom_toTopOf="@id/guideline2"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_user_profile_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_user_place_holder"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_main_userName"
        app:layout_constraintLeft_toLeftOf="parent"


        ></de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/tv_main_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Guest"
        android:textColor="@color/text_color"
        android:fontFamily="@font/gilroy"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/drawer_user_profile_pic"
        app:layout_constraintLeft_toLeftOf="@id/drawer_user_profile_pic"
        app:layout_constraintRight_toRightOf="@id/drawer_user_profile_pic"

        ></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="160dp" />
</androidx.constraintlayout.widget.ConstraintLayout>